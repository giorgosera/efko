/**
 * @fileOverview This file contains all the JavaScript functionality for the home page.
 * 
 * @author l </a>
 */

    // =============================== Listeners =============================== //
    
    $("#submit-btn").live("click", function() {
	var url = $("#url").val();	
	var title = $("#title").val();
	var artist = $("#artist").val();
	var genre = $('input[name="genre"]').val();
	if (url && title && artist && genre){
		CYP.post("/submit", 
			 {url : url,
			  title : title,
			  artist : artist,
			  genre: genre
			 },
			 true,
			 function(response) {
				$("#share-url-box").attr("style", "position:relative; width:500px; top:100px; float:right; display:block;")
				$("#share-url-box").html("<h2>Success! Share this link with your friends and fans and let them vote on your cover!</h2></br><p style='border-style:solid; padding:2px;'>"+response.share_url +"</p></br><p><b>Note</: The covers in the homepage appear in random order. However, this link will redirect your fans directly to your cover, which will appear on the left hand frame!</p>");

				//CYP.popup.show("Share this url with your friends: " + response.share_url)

				$("#url").val("");	
				$("#title").val("");
				$("#artist").val("");
				//CYP.successNotifier.show(response.msg)
		});
	} 
	else{
		$("#url").val("");	
		$("#title").val("");
		$("#artist").val("");
		CYP.successNotifier.show("Some fields are missing!");	
	}

    });

$(this).autocomplete("submit/search");
